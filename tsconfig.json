{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"target": "ESNext",
		"module": "ESNext",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "Node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
